<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".STORY.CAMERA.MAIN_CAMERA.MainCamea">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/coklat1">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/previewImageView"
                android:layout_width="415dp"
                android:layout_height="254dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="#EEEBE3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/image" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="422dp"
            android:layout_height="64dp"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <Button
                android:id="@+id/Gallery"
                android:layout_width="182dp"
                android:layout_height="63dp"
                android:paddingLeft="16dp"
                android:backgroundTint="#C77948"
                android:text="Galeri" />

            <Button
                android:id="@+id/camera"
                android:layout_width="182dp"
                android:layout_height="63dp"
                android:layout_marginStart="35dp"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:backgroundTint="#C77948"
                android:text="kamera"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="387dp"
            android:layout_height="67dp"
            android:layout_marginTop="8dp"
            android:hint="pilih kategori"
            android:padding="16dp"
            android:paddingTop="50dp"
            android:background="@color/coklat2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <AutoCompleteTextView
                android:id="@+id/TextAuto"
                android:layout_width="367dp"
                android:layout_height="50dp"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/predictButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Prediksi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:backgroundTint="#C77948"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

        <TextView
            android:id="@+id/proteinTextView"
            android:layout_width="408dp"
            android:layout_height="254dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:hint="ini adalah text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/predictButton" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

